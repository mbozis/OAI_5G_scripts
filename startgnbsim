sa_band77_273prb(){
./nr-softmodem -O ${USERFOLDER}/scripts/configuration/2x2/gnb.sa.band77.fr1.273PRB.2x2.usrpn310.conf --gNBs.[0].min_rxtxtime 6 --rfsim --sa \
--rfsimulator.serveraddr server --rfsimulator.serverport 4043 --usrp-tx-thread-config 1
}
